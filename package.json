{
  "name": "vichurch-graph",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "tsc",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "node dist/index.js",
    "format": "prettier --write '{.,src,desktop/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p ."
  },
  "dependencies": {
    "@vichurch/model": "1.0.2",
    "bara": "2.4.0",
    "bcryptjs": "2.4.3",
    "graphql-yoga": "1.17.4",
    "jsonwebtoken": "8.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/node": "10.12.21",
    "dotenv-cli": "1.4.0",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "nodemon": "1.18.9",
    "prettier": "1.17.0",
    "prisma": "1.26.1",
    "rimraf": "2.6.3",
    "ts-node": "7.0.1",
    "tslint": "5.16.0",
    "typescript": "3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
